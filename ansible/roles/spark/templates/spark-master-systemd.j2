[Unit]
Description=Spark Master Service
Wants=network.target network-online.target
After=network.target network-online.target

[Service]
Type=forking
User=spark
WorkingDirectory={{ spark.datadir }}
ExecStart={{ spark_path }}/sbin/start-master.sh --port {{ port.spark_master }} --webui-port {{ port.spark_master_ui }} 
ExecStop={{ spark_path }}/sbin/sbin/stop-master.sh
Restart=on-abort

[Install]
WantedBy=multi-user.target
